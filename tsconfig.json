{
	"compilerOptions": {
		"baseUrl": ".",
		"target": "ES2020", 	
		"module": "NodeNext", 
		"lib": ["ESNext"],
		"moduleResolution": "NodeNext",
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"inlineSourceMap": true,
		"experimentalDecorators": true,
    	"emitDecoratorMetadata": true,
		"outDir": "../bin/server",
		"paths": {
			"~/*": ["./*"]
		}
	}
}